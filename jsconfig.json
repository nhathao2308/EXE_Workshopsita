{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"], // Maps @ to src directory
      "utils": ["src/lib/utils"], // Maps utils to lib/utils
      "components/*": ["src/components/*"], // Maps components to src/components
      "ui/*": ["src/components/ui/*"] // Maps ui to src/components/ui
    }
  }
}
